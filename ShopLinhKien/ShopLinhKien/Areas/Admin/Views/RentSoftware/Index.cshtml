@model IEnumerable<ShopLinhKien.Models.LeaseSoftwave>

@{
    /**/

    ViewBag.Title = "Category";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
@Html.Partial("~/Areas/Admin/Views/Shared/_topMenu.cshtml")
@Html.Partial("~/Areas/Admin/Views/Shared/_leftMenu.cshtml")
<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <div class="content-header">
        <div class="container-fluid">
            <div class="row m-0">
                <div class="col-sm-6">
                    <h1 class="m-0 text-dark">Quản Lý phần mềm</h1>
                </div><!-- /.col -->
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="#">Home</a></li>
                        <li class="breadcrumb-item active">Quản Lý Loại phần mềm (category)</li>
                    </ol>
                </div><!-- /.col -->
            </div><!-- /.row -->
        </div><!-- /.container-fluid -->
    </div>
    <!-- /.content-header -->

    <section class="container-fluid ">
        <div class=" bg-white card  ">

            <div class="row">
                <div class="col-md-9  w-100 ">
                    @Html.Partial("_MessgeAlert")
                </div>
                <div class="col-md-3 ">
                    <div class=" pt-1 ml-5">
                        <a class="text-white btn-sm btn-success" href="~/admin/rentSoftware/Create">Add loại cho thuê <i class="fas fa-plus"></i></a>
                        <a class="text-white btn-sm btn-success " href="~/admin/rentSoftware/trash">Thùng rác<i class="fas fa-trash"></i></a>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12 p-3">

                    <table id="myTable1" class="table  table-striped table-bordered dt-responsive nowrap">
                        <thead>
                            <tr>
                                <th>Tên phần mềm</th>
                                <th>Giá cài đặt</th>
                                <th>Chức Năng</th>
                                <th>ID</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>

                                    <td><a class="text-cam font-weight-bold card-link " href=""> @Html.DisplayFor(modelItem => item.Name)</a></td>
                                    <td style="font-size:15px;">@item.Price</td>
                                    <td>
                                        <a class="btn btn-sm btn-light text-warning border" href="@Url.Action("Edit", "rentSoftware", new { id = item.ID })">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                    </td>
                                    <td class="text-cam pt-4">@Html.DisplayFor(modelItem => item.ID)</td>
                                </tr>
                            }
                        </tbody>

                    </table>
                </div>
            </div>
        </div>
    </section>

    <script>
        $("#LeaseCategory").addClass("active");
    </script>

