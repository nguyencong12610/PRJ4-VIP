                        <h3 class="title text-cam">Thông tin đơn hàng</h3>

                    </div>
                    <form method="post" action="~/LeaseOrders/updateDate">

                        <input type="hidden" name="id" value="@Model.ID" />

                        <table class="shopping-cart-table table">
