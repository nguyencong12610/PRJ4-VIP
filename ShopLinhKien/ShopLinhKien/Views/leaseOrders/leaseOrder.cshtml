<script>
    $('input[name="option_payment"]').off('click').on('click', function (e) {
        if ($(this).val() == 'NL') {
            $('#nganluongContent').show();
            $('#nganhangcontent').hide();
        }
        else if ($(this).val() == 'ATM_ONLINE') {
            $('#nganluongContent').hide();
            $('#nganhangcontent').show();
        }
        else {
            $('#nganluongContent').hide();
            $('#nganhangcontent').hide();
        }



    });
</script>
